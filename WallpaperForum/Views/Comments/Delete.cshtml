@model WallpaperForum.Models.Comment
@{
    ViewData["Title"] = "Delete Comment";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h3>Delete Comment</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this comment?</h4>
            <div class="mt-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p>@Model.Content</p>
                        <div class="text-muted small">
                            Posted on @Model.CreateDate.ToString("MMM dd, yyyy HH:mm")
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="CommentId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                    <a asp-action="GetDiscussion" asp-controller="Home" asp-route-id="@Model.DiscussionId" class="btn btn-secondary">
                        <i class="fa-solid fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>