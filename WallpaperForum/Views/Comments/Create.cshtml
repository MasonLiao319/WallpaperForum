@model WallpaperForum.Models.Comment
@{
    ViewData["Title"] = "Add Comment";
}
<h2>Add Comment</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Comments" asp-action="Create" method="post" class="mt-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Content" class="control-label">Your Comment</label>
                <textarea asp-for="Content" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <!-- Hidden field to pass the DiscussionId -->
            <input type="hidden" asp-for="DiscussionId" />
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="GetDiscussion" asp-controller="Home" asp-route-id="@Model.DiscussionId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}